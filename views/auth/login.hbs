<div id="form">
  <h2>Log in</h2>
  <form action="/auth/login" method="post">
 
    <label> Username
      <input type="text" name="username" placeholder="gamer" />
    </label>
 
    <label> Password
      <input type="password" name="password" placeholder="********" />
    </label>
 
    <button type="submit">Log in</button>
 
    {{#if errorMessage}}
      <p class="error">{{errorMessage}}</p>
    {{/if}}
  </form>
</div>