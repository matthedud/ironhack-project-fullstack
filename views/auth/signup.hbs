<div id="form">
  <h2>Sign up</h2>
  <form action="/auth/signup" method="post">

    <label> Email
      <input type="text" name="email" placeholder="gamer" />
    </label>

     <label> Username
      <input type="text" name="username" placeholder="gamer" />
    </label>
 
    <label> Password
      <input type="password" name="password" placeholder="********" />
    </label>
 
    <button type="submit">Create an account</button>

    {{#if errorMessage}}
      <p class="error">{{errorMessage}}</p>
    {{/if}}
 
  </form>
</div>