    </thead>
    <tbody>
      {{#each maps}}
        <tr>
          <td class="table-cell-centered">{{debut}}</td>
          <td><ol>
            {{#each ranking}}
              <li>{{name}} - {{time}}s</li>
            {{/each}}
          </ol></td>
          <td class="table-cell-centered">{{playedGame}}</td>
        </tr>
      {{/each}}
    </tbody>
